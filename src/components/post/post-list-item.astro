---
import type { CollectionEntry } from "astro:content";
import DateTag from "../date-tag.astro";
import Tag from "../tag.astro";

type Props = {
  post: CollectionEntry<"blog">;
};

const { post } = Astro.props;
---

<div class="flex flex-col gap-1.5 py-4 border-b border-border last:border-b-0">
  <a href={`/posts/${post.slug}`} target="_self" class="text-base font-medium hover:text-accent transition-colors">
    {post.data.title}
  </a>
  {post.data.description && post.data.description !== "-" && (
    <p class="text-sm text-tx2">{post.data.description}</p>
  )}
  <div class="flex gap-2 items-center">
    <DateTag date={post.data.date} />
    {post.data.tags?.map((tag) => <Tag tag={tag} />)}
  </div>
</div>
